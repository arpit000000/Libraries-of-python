b.pack(side=LEFT,padx=10,pady=12)
b.bind('<Button-1>',click)
b=Button(f,text='6',font='lucida,35,bold',padx=15,pady=15)
b.pack(side=LEFT,padx=10,pady=12)
b.bind('<Button-1>',click)
